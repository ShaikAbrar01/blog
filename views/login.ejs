<div class="container mt-5">
    <% if(incorrect) { %> 
    <div class="alert alert-warning" role="alert">
        Wrong credentials!! Try again..
      </div>
    <% } %> 
    <form action="/login" method="POST">
        <h3>Log In</h3>
        <input type="text" name="username" class="form-control mt-4" placeholder="Enter username" required>
        <!-- <input type="email" name="email" class="form-control mt-2" placeholder="Enter email" required> -->
        <input type="password" name="password" class="form-control mt-2" placeholder="Enter password" required>
        <input type="submit" class="btn btn-md btn-success mt-3" value="Log In">
    </form>

    <p>Don't have an account? <a href="/register">Click here to sign up</a> </p>
</div>

